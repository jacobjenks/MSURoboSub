<?xml version="1.0"?>

<robot name="robosub">
	<link name="base_link">
		<visual>
			<origin xyz="0 0 0" rpy="1.5708 0 0"/>
			<geometry>
				<cylinder length="1.0" radius="0.2"/>	
			</geometry>
			<material name="white">
				<color rgba=".8 .8 .8 .4"/>
			</material>
		</visual>
	</link>

	<link name="arm">
		<visual>
			<geometry>
				<box size="0.05 0.4 0.05"/>
			</geometry>
		</visual>
	</link>

	<link name="torp1">
		<visual>
			<origin xyz="0 0 0" rpy="1.5708 0 0"/>
			<geometry>
				<cylinder length=".5" radius=".025"/>
			</geometry>
			<material name="black">
				<color rgba=".1 .1 .1 1"/>
			</material>
		</visual>
	</link>

	<link name="torp2">
		<visual>
			<origin xyz="0 0 0" rpy="1.5708 0 0"/>
			<geometry>
				<cylinder length=".5" radius=".025"/>
			</geometry>
			<material name="black">
				<color rgba=".1 .1 .1 1"/>
			</material>
		</visual>
	</link>

	<joint name="base_to_arm" type="revolute">
		<origin xyz="0 0 -0.2" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="arm"/>
		<limit effort="30" velocity="1" lower="0" upper="30"/>
	</joint>

	<joint name="base_to_torp1" type="fixed">
		<origin xyz="-0.1 0.3 0.2" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="torp1"/>
	</joint>

	<joint name="base_to_torp2" type="fixed">
		<origin xyz="0.1 0.3 0.2" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="torp2"/>
	</joint>

	<sensor name="cameraF" type="camera" update_rate="30">
		<parent link="base_link"/>
		<origin xyz="0 0 .2" rpy="0 0 0"/>
		<camera width="480" height="640" format="png" hfov="120" near=".001" far="100"/>
	</sensor>

	<sensor name="cameraD" type="camera" update_rate="30">
		<parent link="base_link"/>
		<origin xyz="0 .2 -.1" rpy="90 0 0"/>
		<camera width="480" height="640" format="png" hfov="120" near=".001" far="100"/>
	</sensor>

	<sensor name="imu0" type="imu">
		<parent link="base_link"/>
		<origin xyz=".01 0 -.03" rpy="0 0 180"/>	
	</sensor>

</robot>
